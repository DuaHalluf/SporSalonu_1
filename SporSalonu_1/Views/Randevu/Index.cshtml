@model IEnumerable<SporSalon_1.Models.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-calendar-check"></i> Randevularım</h2>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Randevu Al
        </a>
    </div>

    @if (TempData["Basari"] != null)
    {
        <div class="alert alert-success">@TempData["Basari"]</div>
    }

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted">
                <div class="p-5 bg-light rounded shadow-sm">
                    <h4>Henüz hiç randevunuz yok.</h4>
                    <p>Antrenman programınıza uygun bir randevu almak için yukarıdaki butonu kullanın.</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 60px; height: 60px;">
                                    <i class="bi bi-person-fill fs-2 text-secondary"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-0">@item.Antrenor?.AdSoyad</h5>
                                    <span class="badge bg-info text-dark">@item.Hizmet?.Ad</span>
                                </div>
                            </div>

                            <hr />

                            <div class="row text-center">
                                <div class="col-6 border-end">
                                    <small class="text-muted">TARİH</small><br />
                                    <strong>@item.Tarih.ToString("dd.MM.yyyy")</strong>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">SAAT</small><br />
                                    <strong>@item.Saat</strong>
                                </div>
                            </div>

                            <div class="mt-3 d-flex justify-content-between">
                                <span class="badge bg-success">Gelecek (Aktif)</span>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu randevuyu iptal etmek istiyor musunuz?');">
                                    <i class="bi bi-trash"></i> İptal Et
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
