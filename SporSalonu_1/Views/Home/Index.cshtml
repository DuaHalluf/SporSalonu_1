@{
    ViewData["Title"] = "Ana Sayfa";
}

@if (User.IsInRole("Admin"))
{
    <div class="container mt-4 mb-5 border-bottom pb-4">
        <div class="row mb-3">
            <div class="col-12">
                <h2 class="text-primary">
                    <i class="fa fa-tachometer-alt"></i> Yönetim Paneli (Admin Dashboard)
                </h2>
                <p class="text-muted">Sistem istatistikleri ve hızlı erişim paneli.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-primary shadow h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Toplam Üye</h5>
                            <h2 class="display-4 fw-bold">@ViewBag.UyeSayisi</h2>
                        </div>
                        <i class="fa fa-users fa-4x opacity-50"></i>
                    </div>
                    <a asp-controller="Uyes" asp-action="Index" class="card-footer text-white text-decoration-none d-flex justify-content-between">
                        <span>Detayları Gör</span>
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card text-white bg-success shadow h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Antrenörler</h5>
                            <h2 class="display-4 fw-bold">@ViewBag.AntrenorSayisi</h2>
                        </div>
                        <i class="fa fa-dumbbell fa-4x opacity-50"></i>
                    </div>
                    <a asp-controller="Antrenors" asp-action="Index" class="card-footer text-white text-decoration-none d-flex justify-content-between">
                        <span>Listele</span>
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card text-white bg-warning shadow h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Toplam Randevu</h5>
                            <h2 class="display-4 fw-bold">@ViewBag.RandevuSayisi</h2>
                            <small class="text-dark">Bugün: @ViewBag.BugunRandevu</small>
                        </div>
                        <i class="fa fa-calendar-check fa-4x opacity-50"></i>
                    </div>
                    <a asp-controller="Randevus" asp-action="Index" class="card-footer text-white text-decoration-none d-flex justify-content-between">
                        <span>Yönet</span>
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card text-white bg-danger shadow h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Salon Sayısı</h5>
                            <h2 class="display-4 fw-bold">@ViewBag.SporSalonuSayisi</h2>
                        </div>
                        <i class="fa fa-building fa-4x opacity-50"></i>
                    </div>
                    <a asp-controller="SporSalonus" asp-action="Index" class="card-footer text-white text-decoration-none d-flex justify-content-between">
                        <span>İncele</span>
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<div class="p-5 mb-4 bg-light rounded-3 shadow"
     style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
            background-size: cover; background-position: center; min-height: 500px; display: flex; align-items: center;">
    <div class="container-fluid py-5 text-white text-center">
        <h1 class="display-3 fw-bold">Sınırlarını Zorla, Gücünü Keşfet!</h1>
        <p class="col-md-8 fs-4 mx-auto mt-3">Hayalindeki vücuda kavuşmak için en iyi zaman şimdi. Profesyonel antrenörlerimizle hedeflerine ulaş.</p>

        <div class="mt-4">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="SporSalonus" asp-action="Index" class="btn btn-success btn-lg px-4 py-3 fw-bold me-2 shadow">
                    <i class="fas fa-calendar-check me-2"></i> Hemen Randevu Al
                </a>

                <a asp-controller="YapayZeka" asp-action="Index" class="btn btn-info btn-lg px-4 py-3 fw-bold text-white rounded-pill shadow hover-scale ms-2">
                    <i class="fa fa-robot"></i> AI Asistan'ı Dene
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-5 py-3 fw-bold rounded-pill shadow">
                    <i class="fa fa-user-plus"></i> Aramıza Katıl (Üye Ol)
                </a>
            }
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div class="card-body p-4">
                    <div class="mb-3 text-primary">
                        <i class="fas fa-dumbbell fa-3x"></i>
                    </div>
                    <h3 class="card-title fw-bold">Modern Ekipmanlar</h3>
                    <p class="card-text text-muted">En son teknoloji spor aletleri ile antrenmanlarını en verimli ve güvenli şekilde gerçekleştir.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div class="card-body p-4">
                    <div class="mb-3 text-primary">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    <h3 class="card-title fw-bold">Uzman Antrenörler</h3>
                    <p class="card-text text-muted">Alanında uzman sertifikalı antrenörlerimizle hedeflerinize ulaşmak artık çok daha kolay.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div class="card-body p-4">
                    <div class="mb-3 text-primary">
                        <i class="fas fa-heartbeat fa-3x"></i>
                    </div>
                    <h3 class="card-title fw-bold">Sağlıklı Yaşam</h3>
                    <p class="card-text text-muted">Sadece kas yapmak değil, sağlıklı, zinde ve enerjik bir yaşam sürmeniz için yanınızdayız.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 mb-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <img src="https://images.unsplash.com/photo-1571902943202-507ec2618e8f?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" class="img-fluid rounded shadow-lg" alt="Gym Interior">
        </div>
        <div class="col-md-6 ps-md-5 mt-4 mt-md-0">
            <h2 class="fw-bold display-6 text-primary">Neden Bizi Seçmelisiniz?</h2>
            <p class="lead text-muted mt-3">SporSalonu_1 olarak size sadece bir spor salonu değil, bir yaşam tarzı sunuyoruz.</p>
            <ul class="list-unstyled mt-4">
                <li class="mb-3 d-flex align-items-center">
                    <i class="fa fa-check-circle text-success fa-lg me-3"></i>
                    <span class="fs-5">Haftanın 7 günü açık salon</span>
                </li>
                <li class="mb-3 d-flex align-items-center">
                    <i class="fa fa-check-circle text-success fa-lg me-3"></i>
                    <span class="fs-5">Kişiye özel antrenman programları</span>
                </li>
                <li class="mb-3 d-flex align-items-center">
                    <i class="fa fa-check-circle text-success fa-lg me-3"></i>
                    <span class="fs-5">Temiz, ferah ve hijyenik ortam</span>
                </li>
            </ul>

            <a href="/Hizmets/Index" class="btn btn-outline-primary btn-lg mt-3 rounded-pill">
                Hizmetlerimizi İncele
            </a>
        </div>
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.3s;
    }

        .hover-effect:hover {
            transform: translateY(-10px);
        }

    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-scale:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
        }
</style>