@model SporSalon_1.Models.YapayZekaModel

@{
    ViewData["Title"] = "AI Antrenör";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="mb-0"><i class="fa fa-robot text-info"></i> AI Akıllı Asistan</h3>
                    <small>Kişisel Antrenörünüz Sizi Analiz Etsin</small>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="Hesapla" method="post">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label class="fw-bold">Boyunuz (cm)</label>
                                <input asp-for="Boy" class="form-control" type="number" placeholder="Örn: 180" required />
                            </div>
                            <div class="col-6 mb-3">
                                <label class="fw-bold">Kilonuz (kg)</label>
                                <input asp-for="Kilo" class="form-control" type="number" placeholder="Örn: 75" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">Cinsiyet</label>
                            <select asp-for="Cinsiyet" class="form-select">
                                <option value="Erkek">Erkek</option>
                                <option value="Kadin">Kadın</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">Hedefiniz Nedir?</label>
                            <select asp-for="Hedef" class="form-select">
                                <option value="Kilo">Kilo Vermek / Yağ Yakmak</option>
                                <option value="Kas">Kas Kütlesi Artırmak</option>
                                <option value="Fit">Formda Kalmak</option>
                                <option value="KiloAl">Kilo Almak (Hacim Kazanmak)</option>
                            </select>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-info text-white btn-lg fw-bold">
                                <i class="fa fa-calculator"></i> Analiz Et (AI)
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.SonucBaslik))
        {
            <div class="col-md-7 mt-4 mt-md-0">
                <div class="card shadow border-0 h-100">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="fa fa-check-circle"></i> Analiz Sonucu</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-primary text-center">
                            <h4 class="fw-bold mb-0">@Model.SonucBaslik</h4>
                        </div>

                        <h5 class="text-dark border-bottom pb-2"><i class="fa fa-utensils text-warning"></i> Beslenme Tavsiyesi</h5>
                        <p class="lead fs-6 text-muted">@Model.Tavsiye</p>

                        <h5 class="text-dark border-bottom pb-2 mt-4"><i class="fa fa-dumbbell text-danger"></i> Önerilen Antrenman Programı</h5>
                        <p class="lead fs-6 text-muted">@Model.EgzersizPlani</p>

                        <div class="mt-4 text-center">
                            <a asp-controller="Randevus" asp-action="Create" class="btn btn-outline-dark">
                                Bu Programa Uygun Randevu Al <i class="fa fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>