@{
    ViewData["Title"] = "İşlem Başarılı";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <div class="display-1 text-success">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        <h1 class="display-4 fw-bold text-success">Randevunuz Oluşturuldu!</h1>
        <p class="lead text-muted">İşleminiz başarıyla tamamlanmıştır. Ne yapmak istersiniz?</p>
    </div>

    <div class="row justify-content-center g-4">

        <div class="col-md-5 col-lg-4">
            <div class="card h-100 shadow-sm border-info text-center hover-shadow">
                <div class="card-body py-5">
                    <div class="fs-1 text-info mb-3">
                        <i class="bi bi-list-stars"></i>
                    </div>
                    <h3 class="card-title">Hizmetleri İncele</h3>
                    <p class="card-text text-muted">Diğer spor hizmetlerimizi ve fiyatları incelemek ister misiniz?</p>

                    <a asp-controller="Hizmets" asp-action="Index" class="btn btn-info text-white btn-lg w-100 mt-3">
                        Hizmetlere Git
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-5 col-lg-4">
            <div class="card h-100 shadow-sm border-secondary text-center hover-shadow">
                <div class="card-body py-5">
                    <div class="fs-1 text-secondary mb-3">
                        <i class="bi bi-house-door"></i>
                    </div>
                    <h3 class="card-title">Ana Sayfaya Git</h3>
                    <p class="card-text text-muted">Spor salonu ana sayfasına dönüp genel akışı görebilirsiniz.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg w-100 mt-3">
                        Ana Sayfaya Git
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .hover-shadow {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
        }
</style>