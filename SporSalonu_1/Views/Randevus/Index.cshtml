@model IEnumerable<SporSalon_1.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<h1>@(User.IsInRole("Admin") ? "Tüm Randevular (Yönetici)" : "Randevularım")</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Al</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>Üye (Müşteri)</th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Tarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hizmet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Uye.UserName)
                    </td>
                }
                <td>
                    @item.Tarih.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hizmet.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Antrenor.AdSoyad)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
