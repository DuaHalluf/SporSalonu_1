@model SporSalon_1.Models.Randevu

@{
    ViewData["Title"] = "Yeni Randevu";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Randevu Oluştur</h3>
        </div>
        <div class="card-body">

            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger">@TempData["Hata"]</div>
            }

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Tarih" class="control-label fw-bold">Tarih</label>
                    <input asp-for="Tarih" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Saat" class="control-label fw-bold">Saat</label>
                    <input asp-for="Saat" class="form-control" type="time" />
                    <span asp-validation-for="Saat" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HizmetId" class="control-label fw-bold">Hizmet (Branş)</label>
                    <select asp-for="HizmetId" class="form-control" asp-items="ViewBag.HizmetId" id="HizmetList">
                        <option value="">-- Hizmet Seçiniz --</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AntrenorId" class="control-label fw-bold">Antrenör</label>
                    <select asp-for="AntrenorId" class="form-control" id="AntrenorList" disabled>
                        <option value="">-- Önce Hizmet Seçiniz --</option>
                    </select>
                    <small class="text-muted">Sadece seçilen hizmette uzman antrenörler listelenir.</small>
                </div>

                <div class="form-group mt-4 text-center">
                    <input type="submit" value="Randevuyu Onayla" class="btn btn-success w-100 py-2" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-link">Listeye Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // عند تغيير الخدمة
            $("#HizmetList").change(function () {
                var hizmetId = $(this).val();
                var antrenorList = $("#AntrenorList");

                // تفريغ قائمة المدربين
                antrenorList.empty();
                antrenorList.append('<option value="">-- Yükleniyor... --</option>');
                antrenorList.prop("disabled", true);

                if (hizmetId) {
                    // طلب AJAX لجلب المدربين
                    $.ajax({
                        url: '/Randevus/GetAntrenorlerByHizmet', // رابط الدالة التي أنشأناها
                        type: 'GET',
                        data: { hizmetId: hizmetId },
                        success: function (data) {
                            antrenorList.empty(); // مسح "جاري التحميل"

                            if (data.length > 0) {
                                antrenorList.append('<option value="">-- Antrenör Seçiniz --</option>');
                                // إضافة المدربين القادمين من السيرفر
                                $.each(data, function (i, item) {
                                    antrenorList.append($('<option></option>').val(item.id).html(item.ad));
                                });
                                antrenorList.prop("disabled", false); // تفعيل القائمة
                            } else {
                                antrenorList.append('<option value="">-- Bu hizmet için uzman bulunamadı --</option>');
                            }
                        },
                        error: function () {
                            alert("Antrenörler yüklenirken bir hata oluştu!");
                        }
                    });
                } else {
                    antrenorList.append('<option value="">-- Önce Hizmet Seçiniz --</option>');
                }
            });
        });
    </script>
}
