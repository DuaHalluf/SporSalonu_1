@model SporSalon_1.Models.Randevu

@{
    ViewData["Title"] = "Yeni Randevu";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Randevu Oluştur</h3>
        </div>
        <div class="card-body">

            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger">@TempData["Hata"]</div>
            }

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Tarih" class="control-label fw-bold">Tarih</label>
                    <input asp-for="Tarih" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Saat" class="control-label fw-bold">Saat</label>
                    <input asp-for="Saat" class="form-control" type="time" />
                    <span asp-validation-for="Saat" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HizmetId" class="control-label fw-bold">Hizmet (Branş)</label>

                    @if (ViewBag.PreSelectedHizmet != null)
                    {
                        <div class="input-group">
                            <span class="input-group-text bg-light text-success border-end-0">
                                <i class="bi bi-check-circle-fill"></i>
                            </span>
                            <input type="text" class="form-control bg-white border-start-0" value="@ViewBag.PreSelectedHizmet.Ad" readonly />
                        </div>

                        <input type="hidden" asp-for="HizmetId" value="@ViewBag.PreSelectedHizmet.Id" id="HizmetIdHidden" />

                        <small class="text-muted">Bu randevu <strong>@ViewBag.PreSelectedHizmet.Ad</strong> hizmeti için oluşturuluyor.</small>
                    }
                    else
                    {
                        <select asp-for="HizmetId" class="form-control" asp-items="ViewBag.HizmetId" id="HizmetList">
                            <option value="">-- Hizmet Seçiniz --</option>
                        </select>
                    }
                    <span asp-validation-for="HizmetId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AntrenorId" class="control-label fw-bold">Antrenör</label>
                    <select asp-for="AntrenorId" class="form-control" id="AntrenorList" disabled>
                        <option value="">-- Önce Hizmet Seçiniz --</option>
                    </select>
                    <small class="text-muted">Sadece seçilen hizmette uzman antrenörler listelenir.</small>
                    <span asp-validation-for="AntrenorId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 text-center">
                    <input type="submit" value="Randevuyu Onayla" class="btn btn-success w-100 py-2" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-link">Listeye Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // دالة موحدة لجلب المدربين لكي نستخدمها في الحالتين
        function loadAntrenorler(hizmetId) {
            var antrenorList = $("#AntrenorList");

            // إعادة تعيين القائمة
            antrenorList.empty();
            antrenorList.append('<option value="">-- Yükleniyor... --</option>');
            antrenorList.prop("disabled", true);

            if (hizmetId) {
                $.ajax({
                    url: '/Randevus/GetAntrenorlerByHizmet', // تأكد أن الاسم يطابق الكنترولر الجمع
                    type: 'GET',
                    data: { hizmetId: hizmetId },
                    success: function (data) {
                        antrenorList.empty(); // مسح "جاري التحميل"

                        if (data.length > 0) {
                            antrenorList.append('<option value="">-- Antrenör Seçiniz --</option>');
                            $.each(data, function (i, item) {
                                antrenorList.append($('<option></option>').val(item.id).html(item.ad));
                            });
                            antrenorList.prop("disabled", false); // تفعيل القائمة
                        } else {
                            antrenorList.append('<option value="">-- Bu hizmet için uzman bulunamadı --</option>');
                        }
                    },
                    error: function () {
                        antrenorList.empty();
                        antrenorList.append('<option value="">-- Hata oluştu --</option>');
                        alert("Antrenörler yüklenirken bir hata oluştu!");
                    }
                });
            } else {
                antrenorList.empty();
                antrenorList.append('<option value="">-- Önce Hizmet Seçiniz --</option>');
            }
        }

        $(document).ready(function () {
            // السيناريو 1: المستخدم يختار من القائمة المنسدلة (الحجز العادي)
            $("#HizmetList").change(function () {
                var selectedId = $(this).val();
                loadAntrenorler(selectedId);
            });

            // السيناريو 2: الصفحة فتحت والخدمة محددة مسبقاً (الحجز الموجه)
            // نبحث عن الحقل المخفي الذي وضعناه في الـ IF
            var preSelectedId = $("#HizmetIdHidden").val();
            if (preSelectedId) {
                // استدعاء الدالة فوراً عند تحميل الصفحة
                loadAntrenorler(preSelectedId);
            }
        });
    </script>
}